pipeline {
    agent any

    options {
        // ìµœì‹  ë¹Œë“œ 5ê°œë§Œ ë³´ì¡´
        buildDiscarder(logRotator(numToKeepStr: '5'))
        // ë¹Œë“œ íƒ€ì„ì•„ì›ƒ (30ë¶„ ì´ìƒ ê±¸ë¦¬ë©´ ì¢…ë£Œ)
        timeout(time: 30, unit: 'MINUTES')
    }

    environment {
        IMAGE_NAME   = "kyumin19/be"
        IMAGE_TAG    = "${BUILD_NUMBER}"
        DOCKER_IMAGE = "${IMAGE_NAME}:${IMAGE_TAG}"
        DISCORD_WEBHOOK = credentials('discord-webhook')
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/TeamOldYoung/BE.git'
            }
        }

        stage('Build') {
            steps {
                dir('oldYoung') {
                    sh '''
                        ./gradlew clean bootJar -x test \
                          --no-daemon --console=plain --no-parallel \
                          -Dorg.gradle.jvmargs="-Xmx256m -Xms128m"
                    '''
                }
                // ë¹Œë“œê°€ ëë‚œ ì‹œì ì— ì»¤ë°‹ ì •ë³´ í™•ë³´
                script {
                    env.COMMIT_INFO = sh(
                        script: "git log -1 --pretty=format:'%h | %an | %s'",
                        returnStdout: true
                    ).trim()
                }
            }
        }

        stage('Docker Build & Push') {
            steps {
                dir('oldYoung') {
                    script {
                        docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-credentials') {
                            def image = docker.build("${DOCKER_IMAGE}")
                            image.push()
                            image.push("latest")
                            echo "âœ… Docker ì´ë¯¸ì§€ í‘¸ì‹œ ì„±ê³µ: ${DOCKER_IMAGE}"
                        }
                    }
                }
            }
        }
    }

    post {
        success {
            script {
                def message = """{
                    "content": "âœ… Jenkins ë¹Œë“œ ì„±ê³µ!\\nì´ë¯¸ì§€: ${DOCKER_IMAGE}\\nì»¤ë°‹: ${env.COMMIT_INFO}"
                }"""
                sh """
                    curl -s -H "Content-Type: application/json" \
                    -X POST -d '${message}' ${DISCORD_WEBHOOK} \
                    || echo "Discord ì•Œë¦¼ ì „ì†¡ ì‹¤íŒ¨"
                """
            }
        }

        failure {
            script {
                def errorMsg = currentBuild.description ?: "ì•Œ ìˆ˜ ì—†ëŠ” ì˜¤ë¥˜"
                def message = """{
                    "content": "ğŸš¨ Jenkins ë¹Œë“œ ì‹¤íŒ¨!\\në¹Œë“œ: #${BUILD_NUMBER}\\nì»¤ë°‹: ${env.COMMIT_INFO}\\nì˜¤ë¥˜: ${errorMsg}"
                }"""
                sh """
                    curl -s -H "Content-Type: application/json" \
                    -X POST -d '${message}' ${DISCORD_WEBHOOK} \
                    || echo "Discord ì•Œë¦¼ ì „ì†¡ ì‹¤íŒ¨"
                """
            }
        }

        always {
            cleanWs()
        }
    }
}
