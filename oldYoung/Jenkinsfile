pipeline {
    agent any

    options {
        // ìµœì‹  ë¹Œë“œ 5ê°œë§Œ ë³´ì¡´
        buildDiscarder(logRotator(numToKeepStr: '5'))
        // ë¹Œë“œ íƒ€ì„ì•„ì›ƒ (30ë¶„ ì´ìƒ ê±¸ë¦¬ë©´ ì¢…ë£Œ)
        timeout(time: 30, unit: 'MINUTES')
    }

    environment {
        IMAGE_NAME   = "kyumin19/be"
        IMAGE_TAG    = "${BUILD_NUMBER}"
        DOCKER_IMAGE = "${IMAGE_NAME}:${IMAGE_TAG}"
        DISCORD_WEBHOOK = credentials('discord-webhook')
        
        // ë°°í¬ ì„œë²„ ì •ë³´ (Jenkins Credentialsì—ì„œ ì„¤ì •)
        /* DEPLOY_USER = credentials('deploy-server-user')
        DEPLOY_HOST = credentials('deploy-server-host')
        DEPLOY_PATH = credentials('deploy-server-path') */
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/TeamOldYoung/BE.git'
            }
        }

        stage('Build') {
            steps {
                dir('oldYoung') {
                    // ì˜ì¡´ì„±ë§Œ ë³€ê²½ëœ ê²½ìš° ìºì‹œ í™œìš©
                    sh '''
                        ./gradlew bootJar -x test \
                          --build-cache --console=plain \
                          -Dorg.gradle.jvmargs="-Xmx256m -Xms128m"
                    '''
                }
                // ë¹Œë“œê°€ ëë‚œ ì‹œì ì— ì»¤ë°‹ ì •ë³´ í™•ë³´
                script {
                    dir('oldYoung') {
                        env.COMMIT_INFO = sh(
                            script: "git log -1 --pretty=format:'%h | %an | %s'",
                            returnStdout: true
                        ).trim()
                    }
                }
            }
        }

        stage('Docker Build & Push') {
            steps {
                dir('oldYoung') {
                    script {
                        docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-credentials') {
                            def image = docker.build("${DOCKER_IMAGE}")
                            
                            // ë¹Œë“œ ë²ˆí˜¸ì™€ latest íƒœê·¸ ëª¨ë‘ í‘¸ì‹œ
                            image.push("${BUILD_NUMBER}")
                            image.push("latest")
                            echo "âœ… Docker ì´ë¯¸ì§€ í‘¸ì‹œ ì™„ë£Œ: ${IMAGE_NAME}:${BUILD_NUMBER}, ${IMAGE_NAME}:latest"
                        }
                    }
                }
            }
        }

        /* stage('Deploy') {
            when {
                anyOf {
                    branch 'main'
                    expression { env.GIT_BRANCH == 'origin/main' }
                }
            }
            steps {
                script {
                    sshagent(['deploy-server-ssh-key']) {
                        sh '''
                            ssh -o StrictHostKeyChecking=no $DEPLOY_USER@$DEPLOY_HOST "
                                cd $DEPLOY_PATH &&
                                export BE_IMAGE=kyumin19/be &&
                                export BE_TAG=latest &&
                                docker-compose pull spring &&
                                docker-compose up -d &&
                                docker-compose ps &&
                                echo 'ğŸš€ ì „ì²´ ì„œë¹„ìŠ¤ ì¬ì‹œì‘ ì™„ë£Œ'
                            "
                        '''
                    }
                    echo "âœ… ë°°í¬ ì™„ë£Œ: kyumin19/be:latest"
                }
            }
        } */
    }

    post {
        success {
            script {
                sendDiscordNotification("âœ… Jenkins ë¹Œë“œ ì„±ê³µ!\\nì´ë¯¸ì§€: ${DOCKER_IMAGE}")
            }
        }
        failure {
            script {
                sendDiscordNotification("ğŸš¨ Jenkins ë¹Œë“œ ì‹¤íŒ¨!\\në¹Œë“œ: #${BUILD_NUMBER}")
            }
        }
        always {
            cleanWs()
        }
    }
}

def sendDiscordNotification(String message) {
    def commitInfo = (env.COMMIT_INFO ?: "ì •ë³´ ì—†ìŒ").replace('"', '\\"')
    def fullMessage = "${message}\\nì»¤ë°‹: ${commitInfo}"
    
    withCredentials([string(credentialsId: 'discord-webhook', variable: 'WEBHOOK_URL')]) {
        sh """
            curl -s -X POST "\${WEBHOOK_URL}" \
            -H "Content-Type: application/json" \
            -d '{"content": "${fullMessage}"}' || echo "Discord ì•Œë¦¼ ì‹¤íŒ¨"
        """
    }
}
