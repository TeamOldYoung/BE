pipeline {
    agent any

    options {
        // ìµœì‹  ë¹Œë“œ 5ê°œë§Œ ë³´ì¡´
        buildDiscarder(logRotator(numToKeepStr: '5'))
        timeout(time: 30, unit: 'MINUTES')
    }

    environment {
        IMAGE_NAME = "kyumin19/be"
        IMAGE_TAG = "${BUILD_NUMBER}"
        DOCKER_IMAGE = "${IMAGE_NAME}:${IMAGE_TAG}"
        DISCORD_WEBHOOK = credentials('discord-webhook')
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/TeamOldYoung/BE.git'
            }
        }

        stage('Build') {
            steps {
                dir('oldYoung') {
                    sh '''
                        ./gradlew clean bootJar -x test \
                          --no-daemon --console=plain --no-parallel \
                          -Dorg.gradle.jvmargs="-Xmx256m -Xms128m"
                    '''
                }
            }
        }

        stage('Docker Build & Push') {
            steps {
                dir('oldYoung') {
                    script {
                        docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-credentials') {
                            // ë¹Œë“œ ë²ˆí˜¸ íƒœê·¸ë¡œ ì´ë¯¸ì§€ ë¹Œë“œ
                            def image = docker.build("${DOCKER_IMAGE}")

                            // ë¹Œë“œ ë²ˆí˜¸ íƒœê·¸ push
                            image.push()

                            // latest íƒœê·¸ push
                            image.push("latest")

                            echo "âœ… Docker ì´ë¯¸ì§€ í‘¸ì‹œ ì„±ê³µ: ${DOCKER_IMAGE}"
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            script {
                try {
                    // ì»¤ë°‹ ì •ë³´ëŠ” ë£¨íŠ¸(.git)ì—ì„œ ê°€ì ¸ì˜´
                    def commitInfo = sh(
                        script: "git log -1 --pretty=format:'%h | %an | %s'",
                        returnStdout: true
                    ).trim()

                    // JSON ì´ìŠ¤ì¼€ì´í”„ ì²˜ë¦¬
                    def escapedCommitInfo = commitInfo.replace('"', '\\"')
                                                      .replace('\n', '\\n')
                                                      .replace('\r', '\\r')

                    def message = """{
                        "content": "âœ… Jenkins ë¹Œë“œ ì„±ê³µ!\\nì´ë¯¸ì§€: ${DOCKER_IMAGE}\\nì»¤ë°‹: ${escapedCommitInfo}"
                    }"""

                    sh """
                        curl -s -H "Content-Type: application/json" \
                        -X POST \
                        -d '${message}' \
                        ${DISCORD_WEBHOOK} || echo "Discord ì•Œë¦¼ ì „ì†¡ ì‹¤íŒ¨"
                    """
                } catch (Exception e) {
                    echo "Discord ì„±ê³µ ì•Œë¦¼ ì „ì†¡ ì¤‘ ì˜¤ë¥˜: ${e.getMessage()}"
                }
            }
        }
        failure {
            script {
                try {
                    def commitInfo = sh(
                        script: "git log -1 --pretty=format:'%h | %an | %s'",
                        returnStdout: true
                    ).trim()

                    def escapedCommitInfo = commitInfo.replace('"', '\\"')
                                                      .replace('\n', '\\n')
                                                      .replace('\r', '\\r')

                    def message = """{
                        "content": "ğŸš¨ Jenkins ë¹Œë“œ ì‹¤íŒ¨!\\në¹Œë“œ: #${BUILD_NUMBER}\\nì»¤ë°‹: ${escapedCommitInfo}"
                    }"""

                    sh """
                        curl -s -H "Content-Type: application/json" \
                        -X POST \
                        -d '${message}' \
                        ${DISCORD_WEBHOOK} || echo "Discord ì•Œë¦¼ ì „ì†¡ ì‹¤íŒ¨"
                    """
                } catch (Exception e) {
                    echo "Discord ì‹¤íŒ¨ ì•Œë¦¼ ì „ì†¡ ì¤‘ ì˜¤ë¥˜: ${e.getMessage()}"
                }
            }
        }
    }
}
